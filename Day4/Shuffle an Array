class Solution {
    int[] a,b;
    Random r=new Random();
    public Solution(int[] nums){a=nums;b=nums.clone();}
    public int[] reset(){a=b.clone();return a;}
    public int[] shuffle(){
        for(int i=0;i<a.length;i++){
            int j=r.nextInt(i+1);
            int t=a[i];a[i]=a[j];a[j]=t;
        }
        return a;
    }
}
