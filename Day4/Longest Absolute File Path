class Solution {
    public int lengthLongestPath(String s){
        String[] a=s.split("\n");
        Map<Integer,Integer> m=new HashMap<>();
        m.put(0,0);
        int r=0;
        for(String x:a){
            int l=x.lastIndexOf("\t")+1;
            int len=x.length()-l;
            if(x.contains(".")) r=Math.max(r,m.get(l)+len);
            else m.put(l+1,m.get(l)+len+1);
        }
        return r;
    }
}
