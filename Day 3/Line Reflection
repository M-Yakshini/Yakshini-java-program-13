class Solution {
    public boolean isReflected(int[][] p){
        Set<String> s=new HashSet<>();
        int min=Integer.MAX_VALUE,max=Integer.MIN_VALUE;
        for(int[] x:p){min=Math.min(min,x[0]);max=Math.max(max,x[0]);}
        int sum=min+max;
        for(int[] x:p) s.add(x[0]+","+x[1]);
        for(int[] x:p)
            if(!s.contains((sum-x[0])+","+x[1])) return false;
        return true;
    }
}
